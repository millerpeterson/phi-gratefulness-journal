%h1 thx.io
%h2 Gratefulness Journal

%div.button_container
- if current_user

  = link_to "New Entry", new_user_entry_path(current_user), :class => 'pure-button pure-button-primary'
  = link_to "Random Entry", user_entries_path(current_user, :random => true), :class => 'pure-button pure-button-primary'

- else

  = link_to 'Login', login_path, :class => 'pure-button pure-button-primary'
  = link_to 'New User?', signup_path, :class => 'pure-button pure-button-primary'