= form_for @user, :html => { :class => 'pure-form pure-form-stacked' } do |f|

  %legend Sign Up

  = if @user.errors.any?
    %div{ :class => "error_messages" }
      %h2 Form is invalid
      %ul
        = for message in @user.errors.full_messages
          %li = message

  = f.label :email
  = f.text_field :email

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation
  = f.password_field :password_confirmation

  %button{ :type => 'submit', :class => 'submit pure-button pure-button-primary' } Sign Up
